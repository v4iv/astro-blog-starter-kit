---
import "$lib/styles/app.css"
import "@fontsource/geist-sans"
import "@fontsource-variable/geist-mono"
import "@fontsource-variable/playfair-display"
import { ClientRouter } from "astro:transitions"

import { getLangFromUrl, useTranslations } from "$lib/i18n/utils"
import Header from "$lib/components/Header.astro"
import Footer from "$lib/components/Footer.astro"

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{t("meta.title")}</title>
    <meta name="description" content={t("meta.description")} />
    <script is:inline>
      const darkModePreference = window.matchMedia(
        "(prefers-color-scheme: dark)",
      )

      // Necessary for view transitions
      document.addEventListener("astro:after-swap", () => {
        if (darkModePreference.matches) {
          document.documentElement.classList.add("dark")
        } else {
          document.documentElement.classList.remove("dark")
        }
      })

      darkModePreference.addEventListener("change", (e) => {
        if (e.matches) {
          document.documentElement.classList.add("dark")
        } else {
          document.documentElement.classList.remove("dark")
        }
      })
    </script>
    <ClientRouter />
  </head>
  <body class="min-h-screen bg-background antialiased">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
